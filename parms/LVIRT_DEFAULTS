#
# Lvirt default parameters
#
# Created by Matthew Merten, 4-25-2001
#
# Revisions:

(Lvirt
	ph2_combine_multiple_returns = yes;	# Converts multiple returns
						# into jumps to a single rts
	ph2_use_conservative_jsr_params = yes;	# Assume jsr uses all
						# possible registers
	ph2_disable_stack_analysis = no;	# Disable the analysis,
						# annotation, and dissection
						# of stack references
        phase3_remove_sync_arcs = yes;          # Remove sync arcs
        phase3_strip_impact_attrs = yes;        # Strip all attributes
                                                # off Mcode when it is
	                                        # used as input 
end)
