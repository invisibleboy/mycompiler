#
# Lhpl_pd default parameters.
#
# Created by Richard Hank 1/20/95 - Copied from LIMPACT_DEFAULTS
#
# Revisions:
#

# These were copied form Scott's STD_PARMS -JCG 
$num_int_reg$ = 64;
$num_flt_reg$ = 64;
$num_dbl_reg$ = 32;
$num_prd_caller_reg$ = 0;
$num_prd_callee_reg$ = 64;
$num_btr_caller_reg$ = 0;
$num_btr_callee_reg$ = 32;

(Lhpl_pd 
    num_int_reg = $num_int_reg$;
    num_flt_reg = $num_flt_reg$;
    num_dbl_reg = $num_dbl_reg$;
    num_prd_caller_reg = $num_prd_caller_reg$;
    num_prd_callee_reg = $num_prd_callee_reg$;
    num_btr_caller_reg = $num_btr_caller_reg$;
    num_btr_callee_reg = $num_btr_callee_reg$;
    preserve_lcode_ids = yes;
    breakup_single_bb_loops = yes;
    convert_to_strict_bb_code = no;

    # Enable building sync arcs from Lcode disambiguation information
    build_sync_arcs = yes;

    use_base_disp = yes;
    use_sign_ext = yes;

    # If yes, don't undo the post inc ld/sts generated by Lopti
    retain_post_inc = no;
end)
