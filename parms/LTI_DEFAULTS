#
# Lti default parameters.
#
# Created by Daniel A. Connors, 1-15-96
# Last modified by Matthew P. Trommers 8-18-98
#


(Lti
    do_ti_machine_optimization = yes	# allow impact mopti in phase 2

    debug_copy_prop = no
    debug_rev_copy_prop = no
    debug_dead_code = no
    debug_const_prop = no
    debug_common_subs = no

    debug_divide_by_const = no
    debug_mod_opti = no
    debug_fill_spill_removal = no
    debug_compare_opti = no
    debug_memory_operands = no
    debug_branch_dec = no
    debug_memory_opti = no
    debug_parallel_ops = no
    debug_swap_add_idx_reg = no
    debug_repeat_opti = no
    debug_delay_branches = no

    do_copy_prop = no                   # allow copy propagation
    do_rev_copy_prop = no               # allow reverse copy propagation
    do_dead_code = no                   # allow dead code removal
    do_const_prop = no                  # do constant propagation
    do_common_subs = no                 # do common subexpression elimination

    do_divide_by_const = no            	# remove divide by constant operations
    do_mod_opti = no                    # convert jsr MOD to AND of decrement
    do_fill_spill_removal = no          # remove unneccessary fill/spill opers
    do_compare_opti = no                # eliminate unnecessary compares
    do_branch_dec = no                  # allow branch and decrement trans
    do_memory_operands = no             # Convert operands to memory operands
    do_memory_opti = no                 # use memory modify instructions
    do_parallel_ops = no                # annotate for parallel operations
    do_swap_add_idx_reg = no            # switch address and index registers
    do_repeat_opti = no                 # use repeat block instruction
    do_delay_branches = no              # allow 3 slot delay branches
end)
